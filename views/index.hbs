     <style>
      html, body {
      width: 100%;
      height: 100%;
      margin: 0;
      padding: 0;
      font-family: "Helvetica", sans-serif;
      }
      .img-slide {
      max-width: 60%;
      max-height: 60%;
      margin-top: 0;
      }
      .slider-container {
      height: 300px !important;
      width: 70%;
      position: relative;
      overflow: hidden;
      text-align: center;
      align-items: center;
      display: flex;
      margin-left: 14%;
      z-index: 1;
      }
      .menu {
      position: absolute;
      left: 0;
      z-index: 30;
      width: 100%;
      bottom: 0;
      }
      .menu label {
      cursor: pointer;
      display: inline-block;
      width: 16px;
      height: 16px;
      background: #189eff;
      border-radius: 50px;
      margin: 0 0.2em 1em;
      }
      .menu label:hover,.menu label:focus {
      background: #1c87c9;
      }
      .slide {
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      left: 100%;
      z-index: 10;
      padding: 8em 1em 0;
      background-size: cover;
      background-position: 50% 50%;
      transition: left 0s 0.75s;
      }
      [id^="slide"]:checked + .slide {
      left: 0;
      z-index: 20;
      transition: left 0.65s ease-out;
      }
      .slide-1 {
      background-image: url("img/p3.jpg");
      }
      .slide-2 {
      background-image: url("img/p6.png");
      }
      .slide-3 {
      background-image: url("img/p10.png");
      }
      .slide-4 {
      background-image: url("img/p5.png");
      }
      .slide-5 {
      background-image: url("img/p8.png");
      }
    </style>

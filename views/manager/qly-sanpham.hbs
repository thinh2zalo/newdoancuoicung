{{#section 'css'}}
<style>
    h2.page-title {
        margin-bottom: 20px;
        padding: 10px 0px 10px 15px;
        background-color: silver;
        font-size: 2rem;
    }

    .center-item {
        text-align: center;
    }

    th:hover {
        cursor: pointer;
        color: #fd0e35;
    }

    .btn-info {
        background-color: #24a0ed;
        color: white;
    }

    .btn-success {
        background-color: #4dac4f;
        color: white;
    }

    .btn-warning {
        background-color: #fd0e35;
        color: white;
    }
</style>
{{/section}}

<div class="container sp">
    <h2 class="page-title">Quản lý sách</h2>

    <div style="float: right">
        <a class="btn btn-info" href="/manager/dashboard" role="button">
            Quay lại
        </a>&nbsp;
        <a class="btn btn-success" href="add" role="button" style="">
            Thêm mới
        </a>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <table id="example1" class="table table-striped">
                    <col width="5%">
                    <col width="20%">
                    <col width="15%">
                    <col width="15%">
                    <col width="12%">
                    <col width="8%">
                    <col width="8%">
                    <col width="15%">
                    <thead>
                        <tr>
                            <th class="center-item">Mã</th>
                            <th>Tên sách</th>
                            <th>Tác giả</th>
                            <th>Nhà xuất bản</th>
                            <th>Tên loại</th>
                            <th class="center-item">Giá bán</th>
                            <th class="center-item">Số lượng</th>
                            <th class="center-item">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each Book}}

                        <tr>
                            <td class="center-item">{{idSach}} </td s>
                            <td>{{ten_sach}} </td>
                            <td>{{tac_gia}}</td>
                            <td>{{tenNhaSX}}</td>
                            <td>{{tenLoai}}</td>
                            <td class="center-item">{{number_format giaBan}} </td>
                            <td class="center-item">{{soLuong}}</td>
                            <td class="center-item">
                                <a class="btn btn-info" href="/manager/sanpham/edit?id={{idSach}}" role="button">
                                    Sửa
                                </a>&nbsp;
                                <a class="btn btn-warning" href="/manager/sanpham/delete?id={{idSach}}" role="button">
                                    Xoá
                                </a>
                            </td>
                        </tr>

                        {{/each}}
                    </tbody>

                </table>
            </div>
        </div>

    </div>
    <!--<button class="btn btn-info" href="/SP/add"type="button">Thêm </button>-->


</div>

<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title">Bạn có chắc chắn muốn xóa thông tin sách này khỏi danh sách không?</h3>
            </div>

            <div class="">
                <button style="margin-left:400px;margin-top: 20px" type="button" class="btn btn-default"
                    data-dismiss="modal">Cancel</button>

                <form action="" method="POST" role="form"
                    style="margin-left:500px;margin-top: -34px;margin-bottom: 18px">
                    <input type="hidden" id="" name="idSach" value="{{idSach}}">
                    <button type="submit" class="btn btn-danger">
                        Okay
                    </button>
                </form>
                <!--<button type="button" class="btn btn-default" data-dismiss="modal">Okay</button>-->

            </div>
        </div>
    </div>
</div>
